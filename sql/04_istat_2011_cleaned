--ISTAT TABLO TEMİZLİĞİ

SELECT 
    PROVINCIA as province_name,
    P1 AS Total_Population,
    
    (P17 + P18 + P19 + P20) AS Youth_Segment_15_34, -- Highest data consumers
    (P21 + P22 + P23 + P24 + P25 + P26) AS Middle_Age_35_64, -- Stable bill payers
    (P27 + P28 + P29) AS Retired_Segment_65_Plus, -- Low ARPU, high loyalty
    
    (P47 + P48) AS Highly_Educated_Population, -- Premium device / fiber potential
    P139 AS Income_Earning_Population, -- Population with purchasing power
    P131 AS Student_Population, -- Target group for youth packages
    
    P138 AS Outgoing_Commuters, -- Daily mobility (Roaming / Base station load)
    
    ST1 AS Total_Foreign_Population,
    (ST9 + ST10 + ST11 + ST12) AS Foreigners_By_Continent,
    
    PF1 AS Total_Households,
    PF3 AS Single_Person_Households, -- Mobile-centric internet usage
    (PF4 + PF5 + PF6) AS Nuclear_Family_Households, -- Multi-line (family) packages
    A46 AS Number_of_Tenants, -- High churn risk group
    E3 AS Residential_Buildings -- Fixed line / Fiber deployment potential

FROM `ndn-project-485520.telecom_italy_data.ISTAT_census_variables_2011`
